
{{> header}}

<div class="container">
<section style="background-color: #eee;height:90vh">
  <div class="container-fluid p-2">
    <div class="row">
      <div class="col-lg-4">
        <form id="enviarImagen" enctype="multipart/form-data">
          <div class="card mb-4">
            <div class="card-body text-center" id="fotoPerfil">
              <img src="{{user.photo}}" alt="avatar" class="rounded-circle img-fluid" style="width: 150px;height:150px">
              <input type="file" id="inputFile" name="image" hidden>
              <span class="icon-camera icon-edit-perfil" onclick="inputFileFuncion()"></span>

              <h5 class="my-3 mt-5">{{user.nombre}}</h5>

              {{!-- <div class="d-flex justify-content-center mb-2">
                <button type="button" class="btn btn-primary">Follow</button>
                <button type="button" class="btn btn-outline-primary ms-1">Message</button>
              </div> --}}
            </div>
          </div>
          <button type="submit" id="btnEnviarFoto" hidden></button>
        </form>

        <input type="text" id="imagenName" name="imagenName" hidden>
        <button type="submit" id="btnEnviarFoto" hidden></button>

        <div class="card m-4">
          <div class="card-bod p-0">
            <a href="/publicar" class="btn btn-success btn-block">
              <span class="icon-add"> Nueva publicacion </span></a>
          </div>
        </div>
      </div>

      <div class="col-lg-8">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" id="publicaciones-tab" data-toggle="tab" href="#publicaciones" role="tab"
              aria-controls="profile" aria-selected="false">Mis Publicaciones</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="guardadas-tab" data-toggle="tab" href="#guardadas" role="tab"
              aria-controls="profile" aria-selected="false">Publicaciones Guardadas</a>
          </li>
          <li class="nav-item">
            <a class="nav-link " id="informacion-tab" data-toggle="tab" href="#informacion" role="tab"
              aria-controls="home" aria-selected="true">Informacion</a>
          </li>


        </ul>
        <div class="tab-content" id="myTabContent">
          {{!-- PUBLICACIONES --}}
          <div class="tab-pane fade show active" id="publicaciones" role="tabpanel" aria-labelledby="guardadas-tab">
            <div class="card">
              <div class="card-body" id="contenedorDeslizante">
                <div class="" style="text-align: center;">
                  <div class="row" id="centrado">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                      <div id="publicaciones">
                        {{#each publicaciones}}
                        <div class="col-lg-12 col-md-6 mb-4">
                          <div class="package-item bg-white mb-2">
                            <div class="post-header">
                              <img src="{{photo}}" alt="Profile" class="profile-pic"> 
                              <div class="user-info">
                                <div class="name">{{usuario}}</div>
                                <div class="timestamp">{{fecha}} a las {{hora}}</div>
                              </div>
                            </div>
                            {{!-- //CARROUSEL --}}
                            <div id="carouselExampleControls{{@index}}" class="carousel slide" data-ride="carousel">
                              <ol class="carousel-indicators">
                                {{#each fotos}}
                                <li data-target="#carousel{{@index}}" data-slide-to="{{@index}}" {{#if
                                  @first}}class="active" {{/if}}>
                                </li>
                                {{/each}}
                              </ol>
                              <div class="carousel-inner" style="height: 100%;">
                                {{#each fotos}}
                                <div class="carousel-item {{#if @first}}active{{/if}}">
                                  <img src="{{urlImagen}}" alt="Imagen {{@index}}"
                                    style="width: 100%; height: 200px;">
                                </div>
                                {{/each}}
                              </div>
                              <a class="carousel-control-prev" href="#carouselExampleControls{{@index}}" role="button"
                                data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                              </a>
                              <a class="carousel-control-next" href="#carouselExampleControls{{@index}}" role="button"
                                data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                              </a>
                            </div>
                            <div class="p-2">
                              <div class="d-flex justify-content-between">
                                <h5 class="m-0">{{moneda}} {{precio}}</h5>
                              </div>

                            </div>


                            <div class="p-1">
                              <div class="d-flex justify-content-between mb-3">
                                <small class="m-0"><i
                                    class="bi bi-house-door-fill text-primary mr-2"></i>{{habitaciones}}
                                  Habitaciones</small>
                                <small class="m-0"><i class="fa fa-bath text-primary mr-2"></i>{{restron}} Baños</small>
                                <small class="m-0"><i class="fa fa-truck text-primary mr-2"></i>{{marquesinas}}
                                  Parqueos</small>

                              </div>
                              <div class="localidades">
                                <small class="m-0">{{provincia}}</small>
                              </div>

                              <hr>
                              <div class=" mt-1 pt-1">
                                <div class="">
                                  <div class="post-footer d-fle align-items-cente" id="containerLike{{_id}}">
                                    <div class="post-footer">
                                      <a href="#" onclick="deleted('{{_id}}')"><i class="bi bi-trash-fill"
                                          style="margin-left:px;"></i>
                                        No disponible</a>

                                      <a href="/publicacion/edit/{{_id}}"><i class="bi bi-pencil-square"
                                          style="margin-left: 20px;"></i>
                                        Editar</a>

                                    </div>

                                  </div>
                                </div>
                              </div>
                            </div>

                          </div>
                        </div>

                        {{/each}}

                      </div>
                    </div>
                    <div class="col-md-3"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="tab-pane fade" id="guardadas" role="tabpanel" aria-labelledby="profile-tab">
            <div class="card">
              <div class="card-body" id="contenedorDeslizante">
                <div class="" style="text-align: center;">
                  <div class="row" id="centrado">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                       
                        {{#each publicacionesDeUsuario}}
                       <div id="publicacionesGuardadas{{_id}}">
                          <div class="package-item bg-white mb-2">
                            <div class="post-header">
                              <img src="{{photo}}" alt="Profile" class="profile-pic">
                              <div class="user-info">
                                <div class="name">{{usuario}}</div>
                                <div class="timestamp">{{fecha}} a las {{hora}}</div>
                              </div>
                            </div>
                            {{!-- //CARROUSEL --}}
                            <div id="carouselExampleControls{{@index}}" class="carousel slide" data-ride="carousel">
                              <ol class="carousel-indicators">
                                {{#each fotos}}
                                <li data-target="#carousel{{@index}}" data-slide-to="{{@index}}" {{#if
                                  @first}}class="active" {{/if}}>
                                </li>
                                {{/each}}
                              </ol>
                              <div class="carousel-inner" style="height: 100%;">
                                {{#each fotos}}
                                <div class="carousel-item {{#if @first}}active{{/if}}">
                                  <img src="{{urlImagen}}" alt="Imagen {{@index}}"
                                    style="width: 100%; height: 200px;">
                                </div>
                                {{/each}}
                              </div>
                              <a class="carousel-control-prev" href="#carouselExampleControls{{@index}}" role="button"
                                data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                              </a>
                              <a class="carousel-control-next" href="#carouselExampleControls{{@index}}" role="button"
                                data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                              </a>
                            </div>
                            <div class="p-2">
                              <div class="d-flex justify-content-between">
                                <h5 class="m-0">{{moneda}} {{precio}}</h5>
                              </div>

                            </div>


                            <div class="p-1">
                              <div class="d-flex justify-content-between mb-3">
                                <small class="m-0"><i
                                    class="bi bi-house-door-fill text-primary mr-2"></i>{{habitaciones}}
                                  Habitaciones</small>
                                <small class="m-0"><i class="fa fa-bath text-primary mr-2"></i>{{restron}} Baños</small>
                                <small class="m-0"><i class="fa fa-truck text-primary mr-2"></i>{{marquesinas}}
                                  Parqueos</small>

                              </div>
                              <div class="localidades">
                                <small class="m-0">{{provincia}}</small>
                              </div>

                              <hr>
                              <div class=" mt-1 pt-1">
                                <div class="">
                                  <div class="post-footer"> 
                             
                                  
                                      <button type="button" class="btn btn-primary btn-sm" onclick="quitarGuardado('{{_id}}')">
                                        <i class="bi bi-x-lg"></i> Quitar de la
                                        lista Guardados</button>
                                  
                                  </div>
                                </div>
                              </div>
                            </div>

                          </div>
                        </div>
                         
                        {{/each}}
                        </div>
                    </div>
                        <div class="col-md-3"></div>
                    
             
                  </div>
                </div>
              </div>
            </div>
          
          {{!-- Informacion --}}
          <div class="tab-pane fade" id="informacion" role="tabpanel" aria-labelledby="informacion-tab">
            <div class="card mb-4">
              <form action="/users/edit" method="post">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Nombre</p>
                    </div>
                    <div class="col-sm-9">
                      <input type="text" class="text-muted mb-0 input form-control" name="nombre"
                        value="{{user.nombre}}">
                    </div>
                  </div>
                  <hr>

                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Email</p>
                    </div>
                    <div class="col-sm-9">
                      <input type="text" class="text-muted mb-0 input form-control" name="email" value="{{user.email}}">
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Telefono</p>
                    </div>
                    <div class="col-sm-9">
                      <input type="text" class="input form-control " name="telefono" value="{{user.telefono}}">
                    </div>
                  </div>
                  <hr>


                </div>
                <div style="text-align: center;margin-bottom:10px">
                  <button class="btn btn-dark" style="border-radius:px;">Actualizar Datos</button>
                </div>

              </form>
            </div>
          </div>

        
        </div>

      </div>
    </div>
  </div>
</section>
</div>


<form id="formQuitar">
  <input type="text" id="idPublicacion" name="idPublicacion" hidden>
  <button type="submit" id="btnQuitar" hidden></button>

</form>

