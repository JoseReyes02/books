    </div>
  </div>
  <style>
    /* Reset y configuración general */

    /* Contenedor principal */
    .container {
      background: white;
      padding: 20px;
      width: 350px;
      text-align: center;
      border-radius: 8px;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Título */
    h2 {
      font-size: 24px;
      margin-bottom: 10px;
    }

    /* Enlace de registro */
    p {
      color: #666;
      font-size: 14px;
    }

    p a {
      color: #1877F2;
      font-weight: bold;
      text-decoration: none;
    }

    p a:hover {
      text-decoration: underline;
    }

    /* Botones */
    .buttons {
      margin-top: 20px;
    }

    #btn {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: flex-start;
      padding: 10px;
      border-radius: 5px;
      border: 1px solid #ccc;
      font-size: 14px;
      cursor: pointer;
      font-weight: bold;
      margin-bottom: 10px;
      transition: 0.3s;
    }

    .btn img {
      width: 20px;
      height: 20px;
      margin-right: 10px;
    }

    /* Estilos específicos de cada botón */
    .google {
      background: white;
      color: #555;
    }

    .google:hover {
      background: #f5f5f5;
    }

    .facebook {
      background: #1877F2;
      color: white;
      border: none;
    }

    .facebook:hover {
      background: #165dd1;
    }

    .apple {
      background: white;
      color: black;
    }

    .apple:hover {
      background: #f5f5f5;
    }
  </style>
