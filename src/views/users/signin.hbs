{{> componentes}}





<div class="container">
      <img src="/images/ced3c5c2-b058-4151-9b2b-7fd86257c5d6.png" class="img-fluid"
        style="max-width: 40%; maxt-height: 200px;" alt="Sample image">

      <h2 class="mt-3">Iniciar sesión</h2>
      <div class="buttons">
        <!-- Botón de Google -->
        <a href="/auth/google" class="btn google" id="btn">
          <img src="https://www.svgrepo.com/show/303108/google-icon-logo.svg" alt="Google">
          <span>Continuar con Google</span>
        </a>


        <div>
          <form action="/users/signin" method="post">
            <div class="divider d-flex align-items-center my-4">
              <p class="text-center fw-bold mx-3 mb-0">O</p>
            </div>

            <!-- Email input -->
            <div class="form-outline mb-4">
              <label class="form-label" for="form3Example3" style="float: left;">Email address</label>
              <input type="email" id="form3Example3" name="email" class="form-control form-control-lg"
                placeholder="Enter email" value="alejandroRomero@gmail.com" />

            </div>

            <!-- Password input -->
            <div class="form-outline mb-3">
              <label class="form-label" for="form3Example4" style="float: left;">Password</label>
              <input type="password" id="form3Example4" name="password" class="form-control form-control-lg"
                placeholder="Enter password" value="12345" />

            </div>

            <div class="d-flex justify-content-between align-items-center">

              <a href="#!" class="text-body">Olvidaste tu contraseña?</a>
            </div>

            <div class="text-center text-lg-start mt-4 pt-2">
              <button type="submit" class="btn btn-primary btn-lg"
                style="padding-left: 2.5rem; padding-right: 2.5rem;">Iniciar session</button>

              <p class="small fw-bold mt-2 pt-1 mb-0">Aun no tienes una cuenta? <a href="/users/signup"
                  class="link-danger">Register</a></p>
            </div>

          </form>


        </div>
      </div>
   

  

</div>









  {{#if IniciarSession}}
  <script>
    window.onload = function () {
      miFuncion();
    };

    function miFuncion() {
      document.getElementById('btnIniciarSession').click()
    }
  </script>
  {{/if}}



  <style>
    /* Reset y configuración general */

    /* Contenedor principal */
     @media (max-width: 576px) {
      .container{
        max-width: 95%;
      }
     }
    .container {

      margin-top: 3%;

      text-align: center;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      background: white;
      padding: 20px;
      width: 500px;

      border-radius: 8px;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Título */
    h2 {
      font-size: 24px;
      margin-bottom: 10px;
    }

    /* Enlace de registro */
    p {
      color: #666;
      font-size: 14px;
    }

    p a {
      color: #1877F2;
      font-weight: bold;
      text-decoration: none;
    }

    p a:hover {
      text-decoration: underline;
    }

    /* Botones */
    .buttons {
      margin-top: 20px;
    }

    #btn {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: flex-start;
      padding: 10px;
      border-radius: 5px;
      border: 1px solid #ccc;
      font-size: 14px;
      cursor: pointer;
      font-weight: bold;
      margin-bottom: 10px;
      transition: 0.3s;
    }

    .btn img {
      width: 20px;
      height: 20px;
      margin-right: 10px;
    }

    /* Estilos específicos de cada botón */
    .google {
      background: white;
      color: #555;
    }

    .google:hover {
      background: #f5f5f5;
    }

    .facebook {
      background: #1877F2;
      color: white;
      border: none;
    }

    .facebook:hover {
      background: #165dd1;
    }

    .apple {
      background: white;
      color: black;
    }

    .apple:hover {
      background: #f5f5f5;
    }
  </style>



