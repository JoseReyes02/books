<div class="container-fluid bg-light pt-3 d-lg-block">
    <div class="row align-items-center justify-content-between">
        <!-- Columna para el botón de retroceso -->
        <div class="col-6 col-lg-3 text-left">
            {{#if ruta}}
            {{else}}
            <a href="/" style="text-decoration: none;">
                <i class="bi bi-arrow-left"> Inicio</i>
            </a>
            {{/if}}
        </div>

        <!-- Espaciador en pantallas grandes para empujar Signin a la derecha -->
        <div class="col-lg-6 d-none d-lg-block"></div>

        <!-- Columna para los iconos y usuario -->
        <div class="col-6 col-lg-3 text-right">
            {{#if user}}
            <div class="d-flex align-items-center justify-content-end">
                <div style="margin-right: 25px;">
                    <a class="text-primary px-2 position-relative" href="#" style="text-decoration:none">
                        <i class="bi bi-chat-left-dots-fill"></i>
                    </a>
                    <a class="text-primary px-3 position-relative" href="#" style="text-decoration:none">
                        <i class="bi bi-bell-fill" id="notificationBtn"></i>
                        {{!-- <span id="notificationBtn"
                            class="badge bg-danger position-absolute top-0 start-100 translate-middle p-1 rounded-circle text-white">
                            5
                        </span> --}}
                    </a>

                </div>

                <a href="#" class="btn-Notification" style="text-decoration: none;">
                    
                    <img src="{{user.photo}}" class="avatar rounded-circle" alt="Usuario"
                        style="height: 30px; width:30px">

                </a>
            </div>
            {{else}}
            <div class="d-flex align-items-center justify-content-end w-100">
                <a href="/users/signin" class=" text-decoration-none mx-2">
                    <i class="bi bi-box-arrow-in-right"></i> Signin
                </a>

            </div>
            {{/if}}
        </div>
    </div>
</div>
<div id="notificationPopup" class="popup">
    <div class="popup-content">
        <h5>Notificaciones</h5>
        <hr style="margin: 0%;">
       <label for="">Notienes notificaciones</label>
       
    </div>
</div>

<style>
    /* Estilos generales del header */
    header {
        background-color: #333;
        padding: 10px;
        color: white;
        text-align: right;
    }

    /* Estilos del popup */
    .popup {
        display: none;
        /* Inicialmente oculto */
        position: fixed;
        top: 160px;
        right: 20px;
        transform: translateY(-50%);
        background-color: #fff;
        border: 1px solid #ccc;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        width: 350px;

        z-index: 1000;
    }

    .popup-content h5 {
        margin-top: 0;
        font-family: 'Courier New', Courier, monospace;
        font-weight: 400;
    }

    #notificationList {
        list-style: none;
        padding: 0;
    }

    #notificationList li {
        margin: 10px 0;
    }

    /* Estilos para el botón de cerrar */
    #closePopup {
        margin-top: 10px;
        padding: 5px 10px;
        background-color: #f44336;
        color: white;
        border: none;
        cursor: pointer;
    }

    #closePopup:hover {
        background-color: #d32f2f;
    }
</style>



