<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalBusqueda" id="abrirModalBusqueda"
    hidden>
    Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="modalBusqueda" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Resultado de la busqueda!</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">

                    {{#each publicaciones}}
                    <div class="col-md-2"></div>
                    <div class="col-md-8" id="publicaciones{{_id}}"></div>
                    <div class="col-md-2"></div>
                    {{/each}}


                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<style>
    .modal {
        z-index: 1050 !important;

    }

    .modal-backdrop {
        z-index: 1040 !important;
    }

    .modal-backdrop {
        background-color: rgba(0, 0, 0, 0.196) !important;
        /* Cambia la opacidad (0.3 es menos oscuro) */
    }

    .modal-dialog {
 
        max-width: 50vw;
        /* 90% del ancho de la pantalla */
        max-height: 90vh;
        /* 90% del alto de la pantalla */
    }

    @media (max-width: 768px) {
        .modal-dialog {
            max-width: 100vw;
       
        }
    }

    .modal-content {
        height: 100%;
    }
</style>