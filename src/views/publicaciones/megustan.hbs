<div class="container-fluid d-lg-block" style="padding-top: 68px;">
    <div class="text-center mb-0 pb-0">
        <h6 class="text-primary text-uppercase" style="letter-spacing: 5px;">Destination</h6>
        <h1>PUBLICACIONES QUE ME GUSTAN</h1>
    </div>
    <div class="row">
        <div class="col">
            <div class="row" id="contenedorr">
                {{#each publicaciones}}
                <div class="col-md-3">
                    <div class="containerImagen" id="myContainer">
                        <div class="post">
                            <div class="post-header">
                                <img src="img/avatar.png" alt="Avatar" class="avatar">
                                <div class="post-info">
                                    <h2 style="font-size: 18px; float:right">{{nombre}} {{apellido}}</h2><br>
                                    <p style="font-size: 12px; float:right">{{fechaFormateada}} a las {{hora}}</p><br>
                                    <p style="font-size: 11px; float:right">#{{numPublicacion}}</p>
                                </div>

                            </div>
                            <div class="position-relative" style="z-index: 11;">
                                <div class="blog-date">
                                    <h6 class="font-weight-bold mb-n1">Se</h6>
                                    <small class="text-white text-uppercase">{{inlineRadioOptions}}</small>
                                </div>
                            </div>

                            <div class="titulo">
                                <p style="font-size: 15px;">{{titulo}}</p>
                            </div>
                            <a href="/vistaSeleccionado/{{_id}}">
                                <div class="post-content">
                                    <div id="carouselExampleControls{{@index}}" class="carousel slide"
                                        data-ride="carousel">
                                        <ol class="carousel-indicators">
                                            {{#each fotos}}
                                            <li data-target="#carousel{{@index}}" data-slide-to="{{@index}}" {{#if
                                                @first}}class="active" {{/if}}>
                                            </li>
                                            {{/each}}
                                        </ol>
                                        <div class="carousel-inner">
                                            {{#each fotos}}
                                            <div class="carousel-item {{#if @first}}active{{/if}}">
                                                <img src="/upload/{{this}}" alt="Imagen {{@index}}"
                                                    style="width: 500px; height: 200px;">
                                            </div>
                                            {{/each}}
                                        </div>
                                        <a class="carousel-control-prev" href="#carouselExampleControls{{@index}}"
                                            role="button" data-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                        <a class="carousel-control-next" href="#carouselExampleControls{{@index}}"
                                            role="button" data-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </div>
                                </div>
                            </a>
                            <hr style="margin: 2%;">
                            <form id="disLike">
                                <div class="post-actions">
                                    <!-- Botones de acciones (Me gusta, Comentar, Compartir, etc.) -->
                                    <button type="button" class="btn btn-sm btn-danger"
                                        onclick="optenerdisLike('{{_id}}')">
                                        <span class="icon-thumbsdown">
                                            <small style="color: black;">{{likeCount}}</small>
                                            <small style="font-size: 10px; color:aliceblue">Ya no me gusta</small>
                                        </span></button>
                                    
                                    <input type="hidden" name="idPublicaciondisLike" id="idOptenidodisLike">
                                    <button type="submit" id="enviardisLike" hidden></button>

                                    <button type="button" class="btn btn-sm btn-success">
                                        <span class="icon-save" style="color:;cursor:pointer">
                                            <small style="color: black;"></small>
                                            <small style="font-size: 10px;">Guardar</small>
                                        </span></button>

                                    <button type="button" class="btn btn-sm btn-success">
                                        <span class="icon-share-alt" style="color:;cursor:pointer">
                                            <small style="color: black;"></small>
                                            <small style="font-size: 9px;">Compartir</small>
                                        </span></button>

                                </div>
                            </form>
                            <hr style="margin: 2%;">

                            <div class="detalles">
                                <span class="icon-user"> {{municipio}}</span>
                            </div>

                            <div class="precio">

                                <h4>RD$ {{precio}}</h4>
                            </div>
                        </div>
                    </div>


                </div>

                {{/each}}

            </div>


        </div>

    </div>
</div>
<script src="/js/disLike.js"></script>
{{>footer}}