<script>
    // codigo para el contenedor de imagenes de la vista seleccionada
    // Obtiene la imagen modal y la imagen ampliada
    const modals = document.getElementById('imagen-modal');
    const imagenAmpliada = document.getElementById('imagen-ampliada');

    // Obtiene todas las imágenes miniaturas
    const imagenesMiniatura = document.querySelectorAll('.imagen-miniatura');

    // Agrega un evento de clic a cada imagen miniatura
    imagenesMiniatura.forEach(imagen => {
        imagen.addEventListener('click', () => {
            // Muestra el modal y establece la imagen ampliada
            modals.style.display = 'flex';
            imagenAmpliada.src = imagen.src;
        });
    });

    // Cierra el modal cuando se hace clic en él
    modals.addEventListener('click', () => {
        modals.style.display = 'none';
    });
</script>
